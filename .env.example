# NATS Configuration
NATS_URL=nats://nats.nats.svc.cluster.local:4222
INPUT_STREAM=bluesky-posts
OUTPUT_STREAM=bluesky-posts-topics
INPUT_SUBJECT=bluesky.posts
OUTPUT_SUBJECT=bluesky.posts.topics
CONSUMER_NAME=topic-processor
QUEUE_GROUP=topic-processor
NUM_STREAM_REPLICAS=1

# Service Configuration
SERVICE_NAME=nats-stream-processor-topics
ACK_WAIT_SECONDS=30
MAX_DELIVER=3
MAX_ACK_PENDING=100
DUPLICATE_WINDOW_SECONDS=600

# Topic Classification Model Configuration
# Uses tweet-topic-21-multi model with 19 predefined topic categories
# Topic labels are fixed by the model: arts_&_culture, business_&_entrepreneurs,
# celebrity_&_pop_culture, diaries_&_daily_life, family, fashion_&_style,
# film_tv_&_video, fitness_&_health, food_&_dining, gaming, learning_&_educational,
# music, news_&_social_concern, other_hobbies, relationships, science_&_technology,
# sports, travel_&_adventure, youth_&_student_life
MODEL_NAME=richardr1126/tweet-topic-21-multi-ONNX
MODEL_CACHE_DIR=./models
MAX_SEQUENCE_LENGTH=512
SIGMOID_THRESHOLD=0.5

# Performance Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0

# Health Check Configuration
HEALTH_CHECK_PORT=8080
METRICS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Keep this new line at the end of the file
