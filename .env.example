# NATS Configuration
NATS_URL=nats://nats.nats.svc.cluster.local:4222
INPUT_STREAM=bluesky-posts
OUTPUT_STREAM=bluesky-posts-topics
INPUT_SUBJECT=bluesky.posts
OUTPUT_SUBJECT=bluesky.posts.topics
CONSUMER_NAME=topic-processor
QUEUE_GROUP=topic-processor
NUM_STREAM_REPLICAS=1

# Service Configuration
SERVICE_NAME=nats-stream-processor-topics
ACK_WAIT_SECONDS=60
MAX_DELIVER=3
MAX_ACK_PENDING=100
DUPLICATE_WINDOW_SECONDS=600

# Topic Classification Model Configuration
MODEL_NAME=richardr1126/roberta-base-zeroshot-v2.0-c-ONNX
MODEL_CACHE_DIR=./models
MAX_SEQUENCE_LENGTH=512
CONFIDENCE_THRESHOLD=0.3
MULTI_LABEL=true
HYPOTHESIS_TEMPLATE="This post is about {}"
TOPIC_LABELS="politics-news,technology-science,entertainment-media,sports,lifestyle,creative-arts"

# Performance Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0

# Health Check Configuration
HEALTH_CHECK_PORT=8080
METRICS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Keep this new line at the end of the file
